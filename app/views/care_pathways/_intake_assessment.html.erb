<div class="step-action-container">
  <div class="step-header">
    <h3>Intake Assessment</h3>
    <p class="step-description">Complete the patient intake assessment process</p>
  </div>
  
  <%= form_with url: complete_step_patient_care_pathway_path(patient, step.care_pathway, step),
                method: :post,
                local: true,
                data: { turbo: false },
                class: "step-action-form" do |f| %>
    <div class="form-actions">
      <%= submit_tag "Complete Intake Assessment", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>