<div class="step-action-container">
  <div class="step-header">
    <h3>Bed Assignment</h3>
    <p class="step-description">Select destination for patient placement</p>
  </div>

  <%= form_with url: complete_step_patient_care_pathway_path(patient, step.care_pathway, step),
                method: :post,
                local: true,
                data: { turbo: false },
                class: "bed-assignment-form" do |f| %>

    <div class="destination-section">
      <div class="destination-options">
        <label class="destination-option">
          <%= radio_button_tag "destination", "rp", false, class: "destination-radio", required: true %>
          <div class="option-card">
            <div class="option-header">
              <span class="option-title">Results Pending (RP) Area</span>
            </div>
            <p class="option-description">For stable patients awaiting test results</p>
          </div>
        </label>

        <label class="destination-option">
          <%= radio_button_tag "destination", "ed", false, class: "destination-radio", required: true %>
          <div class="option-card">
            <div class="option-header">
              <span class="option-title">Emergency Department (ED) Bed</span>
            </div>
            <p class="option-description">For patients requiring immediate care</p>
          </div>
        </label>
      </div>

      <% if patient.rp_eligible? %>
        <div class="status-notice info">
          <span class="notice-icon">ℹ️</span>
          <span class="notice-text">Recommendation: Patient is eligible for Results Pending area</span>
        </div>
      <% else %>
        <div class="status-notice info">
          <span class="notice-icon">ℹ️</span>
          <span class="notice-text">Recommendation: Patient should go to Emergency Department based on triage assessment</span>
        </div>
      <% end %>
    </div>

    <div class="form-actions">
      <%= submit_tag "Confirm Assignment", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>
