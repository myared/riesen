<div id="add-procedure-modal" class="modal-overlay" style="display: none;">
  <div class="modal-content">
    <button type="button" class="modal-close" id="close-add-procedure">&times;</button>
    <h3>Add New Procedure</h3>
    <%= form_with(url: '#', method: :post, id: 'add-procedure-form') do |form| %>
      <%= form.label :name, "Procedure Name" %>
      <%= form.select :name, 
                      options_for_select(['IV Start', 'Blood Draw', 'Splint Application', 'Wound Care']), 
                      {}, 
                      { id: 'procedure-select', class: 'form-control' } %>
      
      <%= form.label :description, "Description (optional)" %>
      <%= form.text_area :description, rows: 3 %>
      
      <div class="modal-actions">
        <button type="button" class="btn btn-secondary" id="cancel-add-procedure">Cancel</button>
        <%= form.submit "Add Procedure", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
