<div id="add-order-modal" class="modal-overlay" style="display: none;">
  <div class="modal-content">
    <button type="button" class="modal-close" id="close-add-order">&times;</button>
    <h3>Add New Order</h3>
    <%= form_with(url: '#', method: :post, id: 'add-order-form') do |form| %>
      <div class="order-type-tabs">
        <button type="button" class="tab-btn active" data-order-type="lab">Lab</button>
        <button type="button" class="tab-btn" data-order-type="imaging">Imaging</button>
        <button type="button" class="tab-btn" data-order-type="medication">Medication</button>
      </div>
      
      <input type="hidden" name="order[order_type]" id="order_type_input" value="lab">
      
      <div id="lab-orders">
        <%= form.label :name, "Lab Test" %>
        <%= form.select :name, 
                        options_for_select(['CBC', 'BMP', 'Troponin', 'D-Dimer', 'Lactate']), 
                        {}, 
                        { id: 'order-select-lab', class: 'form-control' } %>
      </div>
      
      <div id="imaging-orders" style="display: none;">
        <%= form.label :name, "Imaging Study" %>
        <%= form.select :name, 
                        options_for_select(['Chest X-Ray', 'CT Head', 'CT Abdomen/Pelvis', 'Ultrasound RUQ']), 
                        {}, 
                        { id: 'order-select-imaging', class: 'form-control' } %>
      </div>
      
      <div id="medication-orders" style="display: none;">
        <%= form.label :name, "Medication" %>
        <%= form.select :name, 
                        options_for_select(['Normal Saline', 'Tylenol', 'Morphine', 'Zofran']), 
                        {}, 
                        { id: 'order-select-medication', class: 'form-control' } %>
      </div>
      
      <%= form.label :notes, "Notes (optional)" %>
      <%= form.text_area :notes, rows: 3 %>
      
      <div class="modal-actions">
        <button type="button" class="btn btn-secondary" id="cancel-add-order">Cancel</button>
        <%= form.submit "Add Order", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
