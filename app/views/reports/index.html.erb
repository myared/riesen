      <div class="report-card__chart">
        <canvas data-controller="chart"
                data-chart-type-value="line"
                data-chart-data-value="<%= @rp_utilization_data.to_json %>"></canvas>
      </div>
      <div class="report-card__footer">
        <div class="report-card__insight">
          <span class="insight__icon">üìä</span>
          <span class="insight__text">Average utilization: 78%</span>
