<div class="dashboard-sidebar">
  <div class="sidebar-stats">
    <div class="stat-card">
      <div class="stat-label">My Patients</div>
      <div class="stat-value"><%= @patients.count %></div>
    </div>

    <div class="stat-card">
      <div class="stat-label">Urgent (ESI 1-2)</div>
      <div class="stat-value"><%= @patients.select { |p| p.intake_complete? && [1, 2].include?(p.esi_level) }.count %></div>
    </div>

    <div class="stat-card">
      <div class="stat-label">Ready for Discharge</div>
      <div class="stat-value">0</div>
    </div>

    <%= link_to reports_path, class: "reports-button" do %>
      <div class="stat-card reports-card">
        <div class="reports-label">Reports</div>
      </div>
    <% end %>
  </div>
</div>

<div class="dashboard-main">
  <h2>Provider Patients</h2>

  <% if @patients.empty? %>
    <div class="empty-state">
      <p>No patients currently assigned to providers</p>
    </div>
  <% else %>
    <div class="patient-table">
      <table>
        <thead>
          <tr>
            <th>Room</th>
            <th class="patient-header">Patient</th>
            <th>Care Pathway</th>
            <th>Pending Task List</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @patients.each do |patient| %>
            <tr data-patient-id="<%= patient.id %>">
              <td><%= patient.display_room %></td>
              <td class="patient-cell">
                <%= link_to patient_path(patient), data: { turbo_frame: "patient_modal" } do %>
                  <div><strong><%= patient.full_name %></strong></div>
                  <div style="font-size: 12px; color: #586069;"><%= patient.age %>Y, <%= patient.chief_complaint %></div>
                <% end %>
              </td>
              <td>
                <div class="care-pathway-cell">
                  <% progress = patient.active_care_pathway&.progress_percentage || 0 %>
                  <%= link_to patient_care_pathways_path(patient, referrer: 'provider'),
                              class: "progress-ring-button",
                              style: "--progress: #{progress}" do %>
                    <span class="progress-text"><%= progress %>%</span>
                  <% end %>
                </div>
              </td>
              <td>
                <%= render 'shared/simplified_task_list', patient: patient, referrer: 'provider' %>
              </td>
              <td>
                <div class="action-buttons">
                  <%= patient_action_button(patient, 'provider') %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>

<turbo-frame id="patient_modal"></turbo-frame>
