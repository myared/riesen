<div class="dashboard-sidebar">
  <div class="sidebar-stats">
    <div class="stat-card">
      <div class="stat-label">Total Waiting</div>
      <div class="stat-value"><%= @total_waiting %></div>
    </div>
    
    <div class="stat-card">
      <div class="stat-label">Avg Wait Time</div>
      <div class="stat-value"><%= @avg_wait_time.round %>m</div>
    </div>
    
    <div class="stat-card">
      <div class="stat-label">RP Utilization</div>
      <div class="stat-value"><%= @rp_utilization %>%</div>
    </div>
  </div>
</div>

<div class="dashboard-main">
  <h2>Waiting Patients</h2>
  
  <div class="patient-table">
    <table>
    <thead>
      <tr>
        <th>Patient</th>
        <th>Care Pathway</th>
        <th>ESI</th>
        <th>Wait Progress</th>
        <th>Chief Complaint</th>
        <th>RP Eligible</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @patients.each do |patient| %>
        <tr data-patient-id="<%= patient.id %>">
          <td>
            <%= link_to patient_path(patient), data: { turbo_frame: "patient_modal" } do %>
              <div><strong><%= patient.full_name %></strong></div>
              <div style="font-size: 12px; color: #586069;"><%= patient.age %>Y • MRN: <%= patient.mrn %></div>
            <% end %>
          </td>
          <td>
            <div class="care-pathway-bar">
              <%= link_to patient_care_pathways_path(patient), 
                          class: "btn-action",
                          data: { turbo_frame: "care-pathway-modal-container" } do %>
                <%= patient.active_care_pathway&.progress_percentage || 0 %>%
              <% end %>
            </div>
          </td>
          <td>
            <span class="esi-badge esi-<%= patient.esi_level %>">
              ESI <%= patient.esi_level %>
            </span>
          </td>
          <td>
            <div style="display: flex; align-items: center; gap: 8px;">
              <span><%= patient.wait_time_minutes %>m</span>
              <div class="progress-bar" style="width: 100px;">
                <div class="progress-bar-fill" style="width: <%= patient.wait_progress_percentage %>%"></div>
              </div>
              <span style="font-size: 11px; color: #586069;"><%= patient.esi_target_label %></span>
            </div>
          </td>
          <td>
            <%= patient.chief_complaint %>
          </td>
          <td>
            <% if patient.rp_eligible %>
              <span class="rp-eligible">✓ RP Eligible</span>
            <% else %>
              <span class="not-rp-eligible">✗ Not RP Eligible</span>
            <% end %>
          </td>
          <td>
            <div class="action-buttons">
              <button class="btn-action" data-patient-id="<%= patient.id %>">
                Assess
              </button>
              <button class="btn-action" data-patient-id="<%= patient.id %>">
                Send to ED
              </button>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>
  
  <% if @patients.empty? %>
    <div class="empty-state">
      <p>No patients currently waiting</p>
    </div>
  <% end %>
</div>

<turbo-frame id="patient_modal"></turbo-frame>