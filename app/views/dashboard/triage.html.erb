<div class="dashboard-sidebar">
  <div class="sidebar-stats">
    <div class="stat-card">
      <div class="stat-label">Total Waiting</div>
      <div class="stat-value"><%= @total_waiting %></div>
    </div>
    
    <div class="stat-card">
      <div class="stat-label">Avg Wait Time</div>
      <div class="stat-value"><%= @avg_wait_time.round %>m</div>
    </div>
    
    <div class="stat-card">
      <div class="stat-label">RP Utilization</div>
      <div class="stat-value"><%= @rp_utilization %>%</div>
    </div>
  </div>
</div>

<div class="dashboard-main">
  <h2>Waiting Patients</h2>
  
  <div class="patient-table">
    <table>
    <thead>
      <tr>
        <th>Room</th>
        <th class="patient-header">Patient</th>
        <th>Care Pathway</th>
        <th>Task List</th>
        <th>RP Eligible</th>
      </tr>
    </thead>
    <tbody>
      <% @patients.each do |patient| %>
        <tr data-patient-id="<%= patient.id %>">
          <td><%= patient.display_room %></td>
          <td class="patient-cell">
            <%= link_to patient_path(patient), data: { turbo_frame: "patient_modal" } do %>
              <div><strong><%= patient.full_name %></strong></div>
              <div style="font-size: 12px; color: #586069;"><%= patient.age %>Y</div>
              <div style="font-size: 12px; color: #586069; margin-top: 2px;"><%= patient.chief_complaint %></div>
            <% end %>
          </td>
          <td>
            <div class="care-pathway-cell">
              <% progress = patient.active_care_pathway&.progress_percentage || 0 %>
              <%= link_to patient_care_pathways_path(patient, referrer: 'triage'),
                          class: "progress-ring-button",
                          style: "--progress: #{progress}" do %>
                <span class="progress-text"><%= progress %>%</span>
              <% end %>
            </div>
          </td>
          <td>
            <%= render 'shared/simplified_task_list', patient: patient, referrer: 'triage' %>
          </td>
          <td>
            <% if !patient.check_in_and_intake_complete? %>
              <span style="color: #6c757d;">N/A</span>
            <% elsif patient.rp_eligible %>
              <span class="rp-eligible">✓</span>
            <% else %>
              <span class="not-rp-eligible">✗</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>
  
  <% if @patients.empty? %>
    <div class="empty-state">
      <p>No patients currently waiting</p>
    </div>
  <% end %>
</div>

<turbo-frame id="patient_modal"></turbo-frame>
