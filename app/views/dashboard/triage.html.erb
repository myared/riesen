<div class="dashboard-stats">
  <div class="stat-card">
    <div class="stat-icon">üë•</div>
    <div class="stat-label">Total Waiting</div>
    <div class="stat-value"><%= @total_waiting %></div>
  </div>
  
  <div class="stat-card">
    <div class="stat-icon">‚è±</div>
    <div class="stat-label">Avg Wait Time</div>
    <div class="stat-value"><%= @avg_wait_time.round %>m</div>
  </div>
  
  <div class="stat-card">
    <div class="stat-icon">üìä</div>
    <div class="stat-label">RP Utilization</div>
    <div class="stat-value"><%= @rp_utilization %>%</div>
  </div>
</div>

<div class="patients-section">
  <h2 class="section-title">Waiting Patients</h2>
  
  <table class="patients-table">
    <thead>
      <tr>
        <th>Patient</th>
        <th>Care Pathway</th>
        <th>ESI</th>
        <th>Wait Progress</th>
        <th>Chief Complaint</th>
        <th>RP Eligible</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @patients.each do |patient| %>
        <tr class="patient-row" data-patient-id="<%= patient.id %>">
          <td class="patient-info">
            <%= link_to patient_path(patient), class: "patient-link", data: { turbo_frame: "patient_modal" } do %>
              <div class="patient-name"><%= patient.full_name %></div>
              <div class="patient-details"><%= patient.age %>Y ‚Ä¢ MRN: <%= patient.mrn %></div>
            <% end %>
          </td>
          <td>
            <div class="care-pathway">
              <span class="pathway-icon">üè•</span>
              <span class="pathway-value"><%= patient.care_pathway || "0%" %></span>
            </div>
          </td>
          <td>
            <span class="esi-badge esi-<%= patient.esi_level %>">
              ESI <%= patient.esi_level %>
            </span>
          </td>
          <td>
            <div class="wait-progress">
              <div class="progress-label">
                <%= patient.wait_time_minutes %>m
              </div>
              <div class="progress-bar">
                <div class="progress-fill" style="width: <%= patient.wait_progress_percentage %>%"></div>
              </div>
              <div class="progress-target">
                <%= patient.esi_target_label %>
              </div>
            </div>
          </td>
          <td class="chief-complaint">
            <%= patient.chief_complaint %>
          </td>
          <td>
            <% if patient.rp_eligible %>
              <span class="rp-badge rp-eligible">‚úì RP Eligible</span>
            <% else %>
              <span class="rp-badge rp-not-eligible">‚úó Not RP Eligible</span>
            <% end %>
          </td>
          <td class="patient-actions">
            <button class="btn btn-sm btn-assess" data-patient-id="<%= patient.id %>">
              ü©∫ Assess
            </button>
            <button class="btn btn-sm btn-send-ed" data-patient-id="<%= patient.id %>">
              Send to ED
            </button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <% if @patients.empty? %>
    <div class="empty-state">
      <p>No patients currently waiting</p>
    </div>
  <% end %>
</div>

<turbo-frame id="patient_modal"></turbo-frame>